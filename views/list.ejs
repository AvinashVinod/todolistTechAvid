<%- include("header") -%>

   <div class="box" id="heading">
      <h1>
         <%= listTitle %>
      </h1>
   </div>

   <div class="box">

      <% newItems.forEach(function(newItem){%>
         <form method="post" action="/delete">
            <div class="item">
               <input type="checkbox" name="checkbox" value="<%= newItem._id %>" onChange="this.form.submit()">
               <p>
                  <%= newItem.name %>
               </p>
               <input type="hidden" name="listName" value="<%= listTitle%>"></input>
            </div>
         </form>
         <% }); %>

            <form class="item" method="post" action="/">

               <input type="text" name="content" placeholder="New Item" autocomplete="off" />
               <button type="submit" name="button" value="<%=listTitle %>">+</button>

            </form>

   </div>

   <%- include("footer") -%>